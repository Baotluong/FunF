<h1><%= @story.lines.first.text + "." %></h1>

<%= render 'form' %>

<% if @story.lines.length < @story.max %>
	<%= form_tag lines_path, method: "post" do %>
		<% if @story.lines.last.is_f.! %>
			<%= label_tag 'Fortunately,' %>
		<% else %>
			<%= label_tag 'Unfortunately,' %>
		<% end %>

		<%= text_field_tag 'text' %>
		<%= submit_tag 'This happens next.' %>
		<%= hidden_field_tag 'is_f', @story.lines.last.is_f.! %>
		<%= hidden_field_tag 'story_id', @story.id %>
		<%= hidden_field_tag 'line_count', @story.lines.count %>
	<% end %>
<% else %>
		<%= text_field_tag :text, 'This Story has Ended.' %>
		<%= submit_tag "This happens next.", disabled: true %>
<% end %>
<br>
<% flash.each do |name, msg| %>
	<%= content_tag :div, msg, class: "alert alert-info" %>
<% end %>
