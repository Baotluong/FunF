<br>
<h2><%= @story.lines.first.text + "." %></h2>
<% @story.lines.drop(1).each do |lines| %>
	<h3>
		<% if lines.report >= 3 %>
			[This line has been deleted.]
		<% else %>
				<% if lines.is_f %>
						<%= "Fortunately, " + lines.text + "." %>
						<%= link_to 'Report', stories_report_up_path(@story, lines) %>
					<% else %>
						<%= "Unfortunately, " + lines.text + "." %>
						<%= link_to 'Report', stories_report_up_path(@story, lines) %>
				<% end %>
		<% end %>
	</h3>
<% end %>

<% if @story.lines.length < @story.max %>
	<%= form_tag lines_path, method: "post" do %>
		<% if @story.lines.last.is_f.! %>
			<%= label_tag 'Fortunately,' %>
		<% else %>
			<%= label_tag 'Unfortunately,' %>
		<% end %>

		<%= text_field_tag 'text' %>
		<%= submit_tag 'This happens next.' %>
		<%= hidden_field_tag 'is_f', @story.lines.last.is_f.! %>
		<%= hidden_field_tag 'story_id', @story.id %>
		<%= hidden_field_tag 'line_count', @story.lines.count %>
	<% end %>
<% else %>
		<%= text_field_tag :text, 'This Story has Ended.' %>
		<%= submit_tag "This happens next.", disabled: true %>
<% end %>
<br>
<% flash.each do |name, msg| %>
	<%= content_tag :div, msg, class: "alert alert-info" %>
<% end %>
<br>
<%= button_to "Find a new story", stories_path, method: "get" %>
<%= button_to "Random Story", story_path(@random_story_id), {method: :get} %>